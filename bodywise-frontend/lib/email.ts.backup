/**
 * Send email using Nodemailer
 * @param to - Recipient email address
 * @param template - Email template with subject and html
 * @returns Promise with success status
 */
export async function sendEmail(to: string, template: { subject: string; html: string }) {
  try {
    // Skip if SMTP is not configured
    if (!process.env.SMTP_USER || !process.env.SMTP_PASS) {
      console.log('‚ö†Ô∏è  SMTP not configured. Email would be sent to:', to);
      console.log('   Subject:', template.subject);
      console.log('   üí° Set SMTP_USER and SMTP_PASS in .env.local to enable emails');
      return { success: true, message: 'SMTP not configured (development mode)' };
    }

    const mailOptions = {
      from: defaultFrom,
      to,
      subject: template.subject,
      html: template.html,
    };

    const transporter = getTransporter();
    await transporter.sendMail(mailOptions);

    console.log('‚úÖ Email sent successfully to:', to);
    return { success: true };
  } catch (error: any) {
    console.error('‚ùå Email sending failed:', error);
    return { success: false, error: error.message };
  }
}

/**
 * Verify SMTP connection
 * Useful for testing email configuration
 */
export async function verifyEmailConnection() {
  try {
    const transporter = getTransporter();
    await transporter.verify();
    console.log('‚úÖ SMTP connection verified');
    return true;
  } catch (error: any) {
    console.error('‚ùå SMTP connection failed:', error.message);
    return false;
  }
}
