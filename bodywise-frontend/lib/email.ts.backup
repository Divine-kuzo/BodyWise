import nodemailer from 'nodemailer';

/**
 * Nodemailer with SendGrid SMTP Configuration
 * Configure via environment variables in .env.local
 */
function getTransporter() {
  return nodemailer.createTransport({
    host: process.env.SMTP_HOST || 'smtp.sendgrid.net',
    port: parseInt(process.env.SMTP_PORT || '587'),
    secure: process.env.SMTP_SECURE === 'true', // false for port 587
    auth: {
      user: process.env.SMTP_USER || 'apikey', // SendGrid always uses 'apikey' as username
      pass: process.env.SMTP_PASS, // Your SendGrid API key
    },
  });
}

// Default from address
const defaultFrom = process.env.SMTP_FROM_EMAIL 
  ? `${process.env.SMTP_FROM_NAME || 'BodyWise'} <${process.env.SMTP_FROM_EMAIL}>`
  : process.env.SMTP_USER || 'noreply@bodywise.com';

